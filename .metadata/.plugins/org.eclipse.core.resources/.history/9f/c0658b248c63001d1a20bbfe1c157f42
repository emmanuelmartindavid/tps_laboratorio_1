#define ERROR -1
#define SUCCESS 1

typedef struct
{
	int id;
	char fullName[100];
	int age;
	char position[30];
	char nationality[30];
	int idNationalTeam;
} sPlayer;
/// @brief	newPlayer 					 CONTRSTRUCTOR DE ENTIDAD JUGADOR EN MEMORIA DINAMICA.
///
/// @return			 					 RETORNA PUNTERO DE ENTIDAD CREADO EN MEMORIA DINAMICA EN CASO CORRECTO. RETORNA NULL EN CASO CONTRARIO.
sPlayer* newPlayer();
