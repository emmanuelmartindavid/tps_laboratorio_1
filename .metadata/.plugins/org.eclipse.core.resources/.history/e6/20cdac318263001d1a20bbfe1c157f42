{
	printf("\t\t\t\t\t\t=========================================================================\n");
	printf("\t\t\t\t\t\t|  ID |        PAIS              |       CONFEDERACION      |CONVOCADOS |\n");
	printf("\t\t\t\t\t\t=========================================================================\n");
}

